<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tbox.fotki.view.fragments.album_fragment.AlbumFragmentViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context="com.tbox.fotki.view.fragments.album_fragment.AlbumFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/albumName_withDecs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_8sdp"
                mutableVisibility = "@{viewModel.topInfoVisibility}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/album_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:textStyle="bold"
                    mutableText="@{viewModel.albumName}"/>

                <TextView
                    android:id="@+id/album_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/album_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@null"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_10sdp"
                    mutableVisibility="@{viewModel.albumDescriptionVisibility}"
                    mutableText="@{viewModel.albumDescription}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/file_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/file_ic"
                        android:visibility="visible"
                        mutableVisibility="@{viewModel.imFolderVisibility}" />

                    <TextView
                        android:id="@+id/item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="@color/colorFile"
                        android:textSize="@dimen/_8sdp"
                        mutableText="@{viewModel.albumCount}"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_emptyAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                mutableVisibility = "@{viewModel.emptyAlbumVisibility}">

                <TextView
                    android:id="@+id/tv_albumEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_album"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_upload"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/action_upload_files"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_upload_and_delete"
                    android:text="@string/action_upload_and_delete_files"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                mutableRefreshing="@{viewModel.swipeRefreshActive}"
                mutableVisibility="@{viewModel.swipeRefreshVisibility}">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:clickable="true"
                    android:columnWidth="140dp"
                    android:drawSelectorOnTop="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:horizontalSpacing="3dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp"
                    android:visibility="gone" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <LinearLayout
                android:id="@+id/internetNotAvailble"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_50sdp"
                android:paddingRight="@dimen/_50sdp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                mutableVisibility="@{viewModel.internetNotAvailableVisibility}">

                <TextView
                    android:id="@+id/tv_noInternetAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/no_internet_access" />

                <Button
                    android:id="@+id/btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="@string/bt_retry"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>