<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <View
        android:id="@+id/view_google_signin_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center_horizontal"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintTop_toBottomOf="@+id/view_google_signin_dialog_view"
        fresco:placeholderImage="@color/colorWhite" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:text="@string/adele_hello"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        fresco:layout_constraintStart_toEndOf="@+id/avatar_image"
        fresco:layout_constraintTop_toBottomOf="@+id/view_google_signin_dialog_view" />


    <TextView
        android:id="@+id/tvSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:text="@string/adele_hello"
        android:textSize="@dimen/_9sdp"
        fresco:layout_constraintStart_toEndOf="@+id/avatar_image"
        fresco:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:text="@string/adele_hello"
        android:textSize="@dimen/_9sdp"
        fresco:layout_constraintStart_toEndOf="@+id/avatar_image"
        fresco:layout_constraintTop_toBottomOf="@+id/tvSince" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="3dp"
        android:background="#909090"
        android:visibility="gone"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintTop_toBottomOf="@+id/avatar_image" />

</androidx.constraintlayout.widget.ConstraintLayout>