<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.tbox.fotki.view.fragments.update_folder_fragment.UpdateFolderFragmentViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tbox.fotki.view.fragments.update_folder_fragment.UpdateFolderFragment"
        android:background="@color/colorBackground">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@null"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_logo"
                android:layout_centerInParent="true"
                android:paddingStart="@dimen/_12sdp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:visibility="gone"
                mutableVisibility="@{viewModel.btnSaveVisibility}"/>

            <Button
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:visibility="gone"
                mutableVisibility="@{viewModel.btnCreateVisibility}"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:id="@+id/mainLayout"
            mutableVisibility="@{viewModel.mainLayoutVisibility}">

            <TextView
                android:id="@+id/textview_create_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_folder"
                android:textSize="@dimen/_18sdp" />

            <EditText
                android:id="@+id/edit_text_create_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/fotki_edit_text"
                android:hint="@string/create_folder_hint"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/failure"
                mutableEditText="@{viewModel.albumETName}"
                />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/textview_description_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="@dimen/_18sdp"
                mutableVisibility="@{viewModel.albumTVDescriptionVisibility}"/>

            <EditText
                android:id="@+id/edit_text_description_item"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/fotki_edit_text"
                android:paddingStart="@dimen/_5sdp"
                android:gravity="top"
                android:paddingTop="@dimen/_5sdp"
                android:inputType="textMultiLine"
                android:textColor="@color/failure"
                mutableVisibility="@{viewModel.albumETDescriptionVisibility}"
                mutableEditText="@{viewModel.albumETDescription}"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/internetNotAvailble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:gravity="center"
            android:visibility="gone"
            mutableVisibility="@{viewModel.internetNotAvailableVisibility}">

            <TextView
                android:id="@+id/tv_noInternetAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/no_internet_access" />

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_retry"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_below="@+id/tv_noInternetAccess"
                android:layout_marginTop="@dimen/_2sdp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>