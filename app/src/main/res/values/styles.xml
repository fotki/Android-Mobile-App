<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <!--<item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:actionMenuTextAppearance">@color/colorWhite</item>-->
        <!--<item name="colorControlActivated">@color/colorBlack</item>-->
    </style>
    <style name="SplashThemeVer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_fotki</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeMenuWhite" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflowWhite</item>
        <!--<item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:actionMenuTextAppearance">@color/colorWhite</item>-->
        <!--<item name="colorControlActivated">@color/colorBlack</item>-->
    </style>

    <style name="AppThemeMenuWhite.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
    </style>
    <!-- Application theme. -->

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:contentDescription">"Lala"</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="MyActionButtonOverflowWhite" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon_white</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:contentDescription">"Lala"</item>
    </style>

    <style name="drawee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="actualImageScaleType">fitCenter</item>
        <item name="failureImage">@color/failure</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/colorDarkGrey</item>
    </style>

    <style name="switcher_style" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <style name="AppThemeNew" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <item name="backgroundColor">#333332</item>
        <item name="textColor">#808080</item>
        <item name="tintColor">#000000</item>
        <item name="buttonColor">#303133</item>
    </style>

    <!-- Base application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <item name="backgroundColor">#333332</item>
        <item name="textColor">#808080</item>
        <item name="tintColor">#F3F3F3</item>
        <item name="buttonColor">#262728</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="color">@color/colorText</item>
    </style>

</resources>
